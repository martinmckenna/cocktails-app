{
  "name": "drinks",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0"
  },
  "scripts": {
    "ci:test": "NODE_PATH=./ CI=true react-scripts test",
    "ci:test:coverage": "NODE_PATH=./ CI=true react-scripts test --coverage",
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type": "NODE_PATH=./ tsc --noEmit",
    "lint": "NODE_PATH=./ tslint src/**/*.{ts,tsx}",
    "format": "NODE_PATH=./ prettier src/**/*.{ts,tsx} --write"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ci:test && yarn type && lint-staged && git add ."
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
